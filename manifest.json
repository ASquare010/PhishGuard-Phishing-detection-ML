{
    "manifest_version": 3,
    "name": "Phishing Detection",
    "version": "0.1",
    "description": "Enhance online security with real-time phishing detection for URLs and emails. Protect yourself from phishing attacks with machine learning-powered analysis and instant alerts.",    
    "permissions": [
      "tabs",
      "scripting",
      "cookies",
      "activeTab",
      "storage"
    ],

    "action": {
      "default_popup": "templates/popup.html",
      "default_icon": {
        "128": "static/assets/icon128.png"
      }
    },
    
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["static/js/contentScript.js"]
      }
    ],
  

    "background": {
      "service_worker": "static/js/background.js"
    },
    "icons": {
        "128": "static/assets/icon128.png"
    }
  }
  